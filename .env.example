# ASPI - Arquivo de Configuração de Ambiente
# Copie este arquivo para .env e ajuste os valores conforme necessário

# =============================================================================
# CONFIGURAÇÕES GERAIS
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
PROJECT_NAME="ASPI - Assistente Inteligente para Dados do Setor Elétrico"
VERSION=1.0.0

# =============================================================================
# BANCO DE DADOS POSTGRESQL
# =============================================================================
DATABASE_URL=postgresql://aspi:aspi123@localhost:5432/aspi_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aspi_db
DB_USER=aspi
DB_PASSWORD=aspi123
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_URL=redis://:redis123@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_MAX_CONNECTIONS=20

# =============================================================================
# N8N WORKFLOW ENGINE
# =============================================================================
N8N_BASE_URL=http://localhost:5678
N8N_USER=admin
N8N_PASSWORD=admin123
N8N_API_KEY=aspi-api-key-2024
N8N_WEBHOOK_TOKEN=aspi-webhook-token-2024
N8N_TIMEOUT=30
N8N_MAX_RETRIES=3
N8N_ENCRYPTION_KEY=aspi-encryption-key-2024

# =============================================================================
# INTELIGÊNCIA ARTIFICIAL
# =============================================================================
# OpenAI API Key (necessário para chat GPT)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (alternativa ao OpenAI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Configurações de IA
DEFAULT_AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# =============================================================================
# ONS API CONFIGURATION
# =============================================================================
ONS_BASE_URL=https://dados.ons.org.br/api/3/action/package_show?id=
ONS_API_CARGA_URL=https://apicarga.ons.org.br/prd
ONS_TIMEOUT=60
ONS_MAX_RETRIES=3

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# MONITORAMENTO
# =============================================================================
MONITORING_ENABLED=true
PROMETHEUS_PORT=8000
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# SEGURANÇA
# =============================================================================
SECRET_KEY=aspi-secret-key-change-in-production
JWT_SECRET_KEY=aspi-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================
# Ativar hot reload no desenvolvimento
STREAMLIT_SERVER_RELOAD_ON_CHANGE=true

# Logs detalhados para desenvolvimento
SQLALCHEMY_ECHO=false

# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO
# =============================================================================
# Deixe vazio em desenvolvimento, configure em produção
SENTRY_DSN=

# =============================================================================
# DOCKER CONFIGURATIONS
# =============================================================================
COMPOSE_PROJECT_NAME=aspi
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1