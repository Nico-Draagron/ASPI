# .env.example
# Copie este arquivo para .env e configure as vari√°veis
# cp .env.example .env

# ===========================================
# Environment Configuration
# ===========================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aide_db
DB_USER=aide_user
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Database for n8n
N8N_DB_NAME=n8n

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_CACHE_TTL=300
REDIS_SESSION_TTL=3600
REDIS_MAX_CONNECTIONS=50

# ===========================================
# AI Services Configuration
# ===========================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Anthropic/Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=1500

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# Default AI Provider
AI_DEFAULT_PROVIDER=openai
AI_ENABLE_STREAMING=false
AI_MAX_RETRIES=3
AI_TIMEOUT=30

# ===========================================
# n8n Configuration
# ===========================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_USER=aide
N8N_PASSWORD=your_n8n_password_here
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key
N8N_WEBHOOK_TOKEN=your_webhook_token
N8N_ENCRYPTION_KEY=your_encryption_key

# Workflow IDs
N8N_WORKFLOW_DATA_INGESTION=aide-data-ingestion
N8N_WORKFLOW_CHAT=aide-chat-processing
N8N_WORKFLOW_MONITORING=aide-monitoring
N8N_WORKFLOW_BACKUP=aide-backup

# n8n Settings
N8N_ENABLE_WEBHOOKS=true
N8N_WEBHOOK_TIMEOUT=30
N8N_WEBHOOK_URL=http://localhost:5678

# ===========================================
# ONS API Configuration
# ===========================================
ONS_API_URL=https://dados.ons.org.br/api/v1
ONS_API_KEY=your_ons_api_key_if_required
ONS_UPDATE_INTERVAL=1
ONS_BATCH_SIZE=100
ONS_MAX_RETRIES=3
ONS_TIMEOUT=60

# ===========================================
# Streamlit Configuration
# ===========================================
STREAMLIT_PORT=8501
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_THEME_PRIMARY_COLOR=#e7cba9
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#f8f9fa
STREAMLIT_THEME_TEXT_COLOR=#2c3e50

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=60
ENCRYPTION_KEY=your-encryption-key
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# ===========================================
# Monitoring & Alerting
# ===========================================
ENABLE_MONITORING=true
METRICS_INTERVAL=300
HEALTH_CHECK_INTERVAL=60
ENABLE_ALERTS=true

# Email Alerts
ALERT_EMAIL=admin@your-domain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Telegram Alerts
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Slack Alerts
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#aide-alerts

# Webhook Alerts
ALERT_WEBHOOK=https://your-webhook-url.com/alerts

# Thresholds
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=80
ERROR_RATE_THRESHOLD=5

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/aide.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_RATE=0.1

# ===========================================
# Feature Flags
# ===========================================
FEATURE_AI_CHAT=true
FEATURE_DATA_EXPORT=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME=false
FEATURE_MULTI_LANGUAGE=false
FEATURE_DARK_MODE=true
FEATURE_API_ACCESS=false
FEATURE_NOTIFICATIONS=true

# ===========================================
# Optional Services (Development)
# ===========================================
# pgAdmin
PGADMIN_EMAIL=admin@aide.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3000

# Prometheus
PROMETHEUS_PORT=9090

# Redis Commander
REDIS_COMMANDER_PORT=8081

# ===========================================
# Docker Compose Profiles
# ===========================================
# Use: docker-compose --profile dev up
# Available profiles: dev, production, monitoring
COMPOSE_PROFILES=dev

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=aide-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ===========================================
# Performance Tuning
# ===========================================
WORKERS=4
THREADS=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
TIMEOUT=300
GRACEFUL_TIMEOUT=30

# ===========================================
# Development Settings
# ===========================================
RELOAD=true
RELOAD_DIRS=app,services,models,utils
AUTORELOAD=true

# ===========================================
# Production Settings
# ===========================================
# SSL_CERT_PATH=/etc/ssl/certs/aide.crt
# SSL_KEY_PATH=/etc/ssl/private/aide.key
# FORCE_HTTPS=true
# SECURE_COOKIES=true
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=strict